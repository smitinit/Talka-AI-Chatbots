{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",

    "strict": false,
    "skipLibCheck": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "noEmit": false,
    "outDir": "dist",

    "incremental": false,
    "composite": false,
    "tsBuildInfoFile": null,
    
    "baseUrl": ".",
    "paths": {
      "@/*": ["./lib/*"]
    }
  },
  "include": ["src/**/*", "index.ts", "lib/**/*"]
}
